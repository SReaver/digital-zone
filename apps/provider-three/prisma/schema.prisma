generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String         @id
  name         String
  description  String?
  price        Float
  currency     String
  availability Boolean
  providerId   String
  lastUpdated  DateTime
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@index([providerId])
}
